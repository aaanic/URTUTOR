<div class="banner" id="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://source.unsplash.com/user/erondu/pX91vVDV6GQ)">
  <div class="banner-container">
    <h1>Learn anything!</h1>
    <h4>What would like to learn today? Find your tutorial. </h4>
  </div>
</div>

<div class="container">
  <div class="tutorials-container">
    <div>
      <h4>Urtutor offers tutorials for:</h4>
      <ul class="vertical-category-list">
        <% @categories.each do |c| %>
        <li class="list-item-category"><%= c %></li>
        <% end %>
      </ul>
    </div>

    <div class="teaser-cards">
      <h3>Popular classes:</h3>
      <div class="index-grid-container">
        <% likes = ['liked', 'empty'] %>
        <% @tutorials.each do |tut| %>
        <% liked_icon = likes.sample %>
        <div class="box">
          <div class="card-container">
            <%= link_to tutorial_path(tut) do %>
            <div class="card">
              <div class="card-left">
                <div class="image" style="background-image: url(<%= tut.image_link %>)" ></div>
              </div>
              <div class="card-right">
                <div class="like-box">
                  <% if liked_icon == 'liked' %>
                    <i class="fas fa-heart liked-icon"></i>
                  <% else %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                </div>
                <div class="card-text">
                  <span class="category-tag"><%= tut.category.name.capitalize %></span>
                  <p style="display: none;" class="category"><%= tut.category.name %></p>
                  <h4><%= tut.title %></h4>
                </div>
              </div>
              <div class="card-action center btn-black">
                <div class="white-text">
                  Go to tutorial
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
