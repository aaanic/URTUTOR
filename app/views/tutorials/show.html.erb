<div class="container">
<h1><%= @tutorial.title %></h1>
<p><%= @tutorial.category %></p>
<img src="<%= @tutorial.image_link %>">
<p><%= @tutorial.description %></p>
<% if policy(@tutorial).edit? %>
  <li> <%= link_to "Edit", edit_tutorial_path %>
  <% end %>
</li>
<% if policy(@tutorial).destroy? %>
<li> <%= link_to "Destroy", @tutorial, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</li>
<li><%= link_to "Back to Tutorials", tutorials_path %></li>
</div>
